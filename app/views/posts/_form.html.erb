<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "label" %>
    <div class="control">
      <%= form.text_field :title, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :content, class: "label" %>
    <div class="control">
      <%= form.text_area :content, class: "textarea" %>
    </div>
  </div>

  <br>

  <div class="field is-grouped">
    <div class="control">
      <%= form.submit class: "button is-info" %>
    </div>
    <% if (defined? show_post) && show_post == true %>
      <div class="control">
        <%= link_to 'Back', @post, class: "button is-info is-light" %>
      </div>
    <% else %>
      <div class="control">
        <%= link_to 'Back', posts_path, class: "button is-info is-light" %>
      </div>
    <% end %>
  </div>
<% end %>
